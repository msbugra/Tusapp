// Soruları alt konulara kategorize et
function categorizeQuestion(question, lesson) {
    if (!tusSubcategories[lesson]) return "Genel";
    
    const q = question.question.toLowerCase();
    const exp = (question.explanation || "").toLowerCase();
    const opts = Object.values(question.options || {}).join(" ").toLowerCase();
    const fullText = q + " " + exp + " " + opts;
    
    // Anahtar kelime eşleştirmeleri
    const keywordMappings = {
        // Pediatri
        "Yenidoğan": ["yenidoğan", "neonatal", "bebek", "doğum", "gestasyon", "ballard", "apgar", "prematüre"],
        "Genetik": ["genetik", "kromozom", "sendrom", "kalıtım", "mutasyon", "down", "turner", "klinefelter"],
        "Kardiyoloji": ["kalp", "kardiyak", "üfürüm", "kardiyomiyopati", "ekg", "aritmi", "siyanoz"],
        "Nöroloji": ["nöro", "sinir", "gelişim", "motor", "miyotonik", "serebral", "epilepsi", "konvülsiyon"],
        "Hematoloji": ["kan", "anemi", "polisitemi", "tromboz", "hemoglobin", "lökosit", "trombosit"],
        "Endokrinoloji": ["hormon", "diyabet", "tiroid", "büyüme", "puberte", "adrenal"],
        "Gastroenteroloji ve Hepatoloji": ["ishal", "karın", "bağırsak", "mide", "karaciğer", "hepatit", "kolestaz"],
        "Enfeksiyon Hastalıkları": ["enfeksiyon", "ateş", "bakteriyel", "viral", "sepsis", "menenjit"],
        "Allerji": ["allerji", "alerjik", "atopi", "astım", "ürtiker", "anafilaksi"],
        "İmmunoloji": ["immün", "bağışıklık", "antikor", "immünoglobulin", "aşı", "bağışıklama"],
        "Onkoloji": ["kanser", "tümör", "lenfoma", "lösemi", "kemoterapi", "malign"],
        
        // Patoloji
        "Neoplazi": ["tümör", "kanser", "malign", "benign", "metastaz", "karsinom", "sarkom", "lenfoma"],
        "İnflamasyon": ["inflamasyon", "iltihap", "nötrofil", "makrofaj", "granülom", "akut", "kronik"],
        "İmmun Sistem": ["immün", "antikor", "immünoglobulin", "kompleman", "hipersensitivite"],
        "Hemopoetik Sistem": ["kemik iliği", "lösemi", "lenfoma", "anemi", "trombositopeni"],
        "Kardiyovasküler Sistem": ["kalp", "arter", "ven", "ateroskleroz", "infarkt", "kardiyomiyopati"],
        "Solunum Sistemi": ["akciğer", "bronş", "alveoler", "pnömoni", "fibrozis", "amfizem"],
        "Gastrointestinal Sistem": ["mide", "bağırsak", "özofagus", "duodenum", "kolon", "rektum"],
        "Üriner Sistem": ["böbrek", "mesane", "üreter", "glomerül", "tübül", "nefrit"],
        "Endokrin Sistem": ["tiroid", "adrenal", "pankreas", "hipofiz", "paratiroid"],
        "Meme Hastalıkları": ["meme", "mamografi", "fibroadenom", "karsinom", "papillom"],
        
        // Küçük Stajlar
        "Nöroloji": ["nöroloji", "baş ağrısı", "migren", "epilepsi", "inme", "parkinson", "demans"],
        "Psikiyatri": ["psikiyatri", "depresyon", "anksiyete", "şizofreni", "bipolar", "psikoz", "deliryum"],
        "Halk Sağlığı": ["epidemiyoloji", "prevalans", "insidans", "tarama", "koruma", "aşı", "salgın"],
        "Dermatoloji": ["deri", "dermatit", "egzama", "psöriyazis", "melanom", "auspitz"],
        "Göz Hastalıkları": ["göz", "katarakt", "glokom", "retina", "kornea", "ambliyopi", "miyopi"],
        "Kulak Burun Boğaz": ["kulak", "burun", "boğaz", "işitme", "vertigo", "rinit", "sinüzit"],
        "Ortopedi": ["kemik", "kırık", "eklem", "artrit", "osteoporoz", "skolyoz"],
        "Üroloji": ["böbrek", "mesane", "prostat", "testis", "üretra", "taş", "hematüri"],
        "Acil Tıp ve Zehirlenmeler": ["zehirlenme", "intoksikasyon", "şok", "travma", "resüsitasyon"],
        
        // Biyokimya
        "Metabolizma": ["metabolizma", "glikoliz", "glukoneogenez", "krebs", "fosforilasyon"],
        "Karbonhidratlar": ["glukoz", "fruktoz", "galaktoz", "glikojen", "laktoz", "maltoz"],
        "Lipitler": ["yağ", "kolesterol", "trigliserit", "fosfolipid", "lipoprotein"],
        "Aminoasitler ve Proteinler": ["protein", "aminoasit", "peptid", "enzim", "hemoglobin"],
        "Nükleik Asitler": ["dna", "rna", "replikasyon", "transkripsiyon", "translasyon"],
        "Vitaminler ve Mineraller": ["vitamin", "mineral", "kalsiyum", "demir", "çinko"],
        "Hormonlar": ["hormon", "insülin", "glukagon", "tiroksin", "kortizol"],
        
        // Mikrobiyoloji
        "Bakteriyoloji": ["bakteri", "gram", "streptokokus", "stafilokokus", "escherichia", "salmonella"],
        "Viroloji": ["virüs", "hepatit", "influenza", "herpes", "hiv", "adenovirüs"],
        "Mikoloji": ["mantar", "candida", "aspergillus", "cryptococcus", "histoplasma"],
        "Parazitoloji": ["parazit", "malaria", "toxoplasma", "giardia", "entamoeba"],
        "İmmunoloji": ["immün", "antikor", "antijen", "aşı", "immünoglobulin"],
        
        // Farmakoloji
        "Kardiyovasküler Sistem": ["ace inhibitör", "beta blokör", "kalsiyum kanal", "diüretik", "dijital"],
        "Santral Sinir Sistemi": ["antidepresan", "antipsikotik", "antiepileptik", "anksiyolitik"],
        "Otonom Sinir Sistemi": ["atropin", "neostigmin", "adrenalin", "noradrenalin"],
        "Kemoterapotikler": ["kemoterapi", "doksorubisin", "sisplatin", "metotreksat"],
        "NSAİİ": ["aspirin", "ibuprofen", "diklofenak", "antiinflamatuvar"],
        "Toksikoloji": ["zehirlenme", "antidot", "toksik", "overdoz"],
        
        // Anatomi
        "Kemikler": ["kemik", "vertebra", "femur", "humerus", "radius", "ulna", "tibia"],
        "Kaslar": ["kas", "musculus", "tendon", "ligament", "rotator"],
        "Nöroanatomi": ["beyin", "omurilik", "sinir", "kranyal", "hipotalamus"],
        "Dolaşım Sistemi": ["arter", "ven", "kalp", "aort", "karotis", "jugular"],
        "Solunum Sistemi": ["akciğer", "bronş", "trakea", "larinks", "diafragma"],
        "Gastrointestinal Sistem": ["mide", "bağırsak", "özofagus", "karaciğer", "pankreas"],
        "Ürogenital Sistem": ["böbrek", "mesane", "üretra", "testis", "ovaryum"],
        
        // Dahiliye
        "Kardiyoloji": ["kalp", "ekg", "infarkt", "angina", "hipertansiyon", "aritmia", "kardiyomiyopati", "kapak", "üfürüm"],
        "Nefroloji": ["böbrek", "diyaliz", "hipertansiyon", "proteinüri", "hematüri", "nefrit", "üre", "kreatinin"],
        "Gastroenteroloji": ["mide", "bağırsak", "reflü", "ülser", "crohn", "kolit", "ishali", "karın", "gastrit", "duodenum", "kolon", "rektum", "siroz", "hepatit", "karaciğer", "safra", "pankreas", "asit", "fistül"],
        "Hepatoloji": ["karaciğer", "hepatit", "siroz", "safra", "bilirubin", "asit", "portal", "ensefalopati"],
        "Hematoloji": ["anemi", "lösemi", "lenfoma", "trombositopeni", "koagülasyon", "kanama", "pıhtılaşma"],
        "Endokrin": ["diyabet", "tiroid", "adrenal", "hipofiz", "osteoporoz", "hormon", "glukoz", "insülin"],
        "Göğüs Hastalıkları": ["akciğer", "astım", "koah", "pnömoni", "tüberküloz", "solunum", "nefes", "öksürük"],
        "Romatoloji": ["eklem", "artrit", "lupus", "vaskülit", "fibromiyalji", "romatoid", "gut"],
        "Enfeksiyon Hastalıkları": ["enfeksiyon", "antibiyotik", "sepsis", "ateş", "bakteriyel", "viral"],
        "Onkoloji": ["kanser", "kemoterapi", "radyoterapi", "metastaz", "tümör", "malign"],
        
        // Genel Cerrahi
        "Meme Hastalıkları": ["meme", "fibroadenom", "karsinom", "mastektomi"],
        "Tiroid Hastalıkları": ["tiroid", "guatr", "hipertiroidi", "hipotiroidi"],
        "Özefagus": ["özofagus", "disfaji", "reflü", "akalazya"],
        "Mide": ["mide", "ülser", "gastrit", "gastrektomi"],
        "Kolorektal": ["kolon", "rektum", "kanser", "polip", "kolektomi"],
        "Karaciğer": ["karaciğer", "hepatit", "siroz", "hepatektomi"],
        "Safra Yolu ve Safra Kesesi": ["safra", "kolesistit", "kolanjit", "taş"],
        "Pankreas": ["pankreas", "pankreatit", "diabetes", "pankreatektomi"],
        "Fıtık": ["fıtık", "herni", "inguinal", "umblikal"],
        
        // Kadın Hastalıkları ve Doğum
        "Jinekoloji": ["jinekologi", "menstruasyon", "amenore", "dismenore", "endometriozis"],
        "Obstetri": ["gebelik", "doğum", "fetal", "plasenta", "preeklampsi"],
        "Onkoloji": ["over", "endometrium", "serviks", "karsinom"],
        "Endokrinoloji": ["hormon", "östrojen", "progesteron", "menopoz"]
    };
    
    // En iyi eşleşmeyi bul
    let bestMatch = "Genel";
    let maxScore = 0;
    
    Object.entries(keywordMappings).forEach(([subcategory, keywords]) => {
        if (!tusSubcategories[lesson].includes(subcategory)) return;
        
        let score = 0;
        keywords.forEach(keyword => {
            if (fullText.includes(keyword)) {
                score += keyword.length; // Uzun kelimeler daha spesifik
            }
        });
        
        if (score > maxScore) {
            maxScore = score;
            bestMatch = subcategory;
        }
    });
    
    return bestMatch;
}

// Alt konu analizini getir
function getSubcategoryAnalysis() {
    const analysis = {};
    
    questions.forEach(q => {
        const lesson = q.lesson;
        if (!analysis[lesson]) analysis[lesson] = {};
        
        const subcategory = categorizeQuestion(q, lesson);
        if (!analysis[lesson][subcategory]) analysis[lesson][subcategory] = 0;
        analysis[lesson][subcategory]++;
    });
    
    return analysis;
}

